<Page x:Class="Studio.Views.AccountListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studio.Views"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountListPage"
      KeepAlive="True">
    <Page.Resources>
        <DataTemplate x:Key="ProfileListItemTemplate">
            <Grid Height="140">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Image
                    Source="{Binding AvatarUrl}"/>
                <StackPanel Grid.Column="1"
                            Margin="{StaticResource SmallLeftMargin}">
                    <TextBlock
                        Text="{Binding Account.Name}"
                        Style="{StaticResource ListTitleStyle}"/>
                    <TextBlock
                        Text="{Binding Account.Id}"
                        Style="{StaticResource ListSubTitleStyle}"/>
                </StackPanel>

                <Grid
                    Grid.Column="2"
                    MinWidth="300"
                    Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Image Source="{StaticResource TankDrawingImage}"/>
                    <Image Grid.Row="0" Grid.Column="1" Source="{StaticResource DamageDrawingImage}"/>
                    <Image Grid.Row="0" Grid.Column="2" Source="{StaticResource SupportDrawingImage}"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" 
                               Text="{Binding RankedCareer.Tank.CurrentRank.SkillRating}" 
                               Style="{StaticResource SubtitleTextStyle}"
                               TextAlignment="Center"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" 
                               Text="{Binding RankedCareer.Damage.CurrentRank.SkillRating}" 
                               Style="{StaticResource SubtitleTextStyle}"
                               TextAlignment="Center"/>
                    <TextBlock Grid.Column="2" Grid.Row="1" 
                               Text="{Binding RankedCareer.Support.CurrentRank.SkillRating}" 
                               Style="{StaticResource SubtitleTextStyle}"
                               TextAlignment="Center"/>
                </Grid>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ui:DataGrid
            x:Name="AccountDataGrid"
            ItemsSource="{Binding ProfileData, Mode=OneWay}"
            AutoGenerateColumns="False"
            RowHeight="100"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            VirtualizingPanel.ScrollUnit="Pixel"
            SelectionUnit="FullRow"
            SelectionChanged="OnProfileListSelectionChanged"
            MouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown"
            IsReadOnly="True">

            <ui:DataGrid.Columns>

                <DataGridTemplateColumn
                    Header=""
                    CanUserSort="False"
                    CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Avatar}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    MinWidth="250"
                    Header="Name"
                    CanUserSort="True"
                    CanUserResize="False"
                    SortDirection="Descending"
                    SortMemberPath="Account.Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="{StaticResource SmallLeftMargin}">
                                <TextBlock
                                    Text="{Binding Username}"
                                    Style="{StaticResource ListTitleStyle}"/>
                                <TextBlock
                                    Text="{Binding Battletag}"
                                    Style="{StaticResource ListSubTitleStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Sort"
                    MinWidth="75"
                    CanUserResize="False"
                    CanUserSort="True"
                    SortMemberPath="TankRankActive">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Image Source="{StaticResource TankDrawingImage}"/>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding RankedCareer.Tank.CurrentRank.SkillRating}" 
                                           Margin="{StaticResource SmallTopBottomMargin}"
                                           Style="{StaticResource SubtitleTextStyle}" 
                                           HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Sort"
                    MinWidth="75"
                    CanUserResize="False"
                    CanUserSort="True"
                    SortMemberPath="DamageRankActive">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Image Source="{StaticResource DamageDrawingImage}"/>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding RankedCareer.Damage.CurrentRank.SkillRating}" 
                                           Margin="{StaticResource SmallTopBottomMargin}"
                                           Style="{StaticResource SubtitleTextStyle}" 
                                           HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Sort"
                    MinWidth="75"
                    CanUserResize="False"
                    CanUserSort="True"
                    SortMemberPath="SupportRankActive">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2*"/>
                                </Grid.RowDefinitions>

                                <Image Source="{StaticResource SupportDrawingImage}"/>

                                <TextBlock Grid.Row="1"
                                           Text="{Binding RankedCareer.Support.CurrentRank.SkillRating}" 
                                           Margin="{StaticResource SmallTopBottomMargin}"
                                           Style="{StaticResource SubtitleTextStyle}" 
                                           HorizontalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header=""
                    CanUserSort="False"
                    CanUserResize="False"
                    Width="*">
                    
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button 
                                Content="Play" 
                                Click="ButtonBase_OnClick" 
                                MouseEnter="UIElement_OnMouseEnter"
                                MouseLeave="UIElement_OnMouseLeave" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>


</Page>
