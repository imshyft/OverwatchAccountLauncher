<Page x:Class="Studio.Views.AccountDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studio.Views"
      xmlns:controls="clr-namespace:Studio.Controls"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      Title="AccountDetailsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" MinHeight="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox HorizontalAlignment="Left">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Image>
                    <Image.Source>
                        <Binding Path="Profile.Avatar" >
                            <Binding.TargetNullValue>
                                <ImageSource>/Resources/PlaceholderPlayerIcon.png</ImageSource>
                            </Binding.TargetNullValue>
                        </Binding>
                    </Image.Source>
                </Image>
                <Grid
                    Grid.Column="1"
                    MinWidth="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        Text="{Binding Profile.CustomId}"
                        Style="{StaticResource PageTitleStyle}"
                        FontSize="70"></TextBlock>
                    <TextBlock
                        Grid.Row="1"
                        Text="{Binding Profile.BattletagString}"
                        Style="{StaticResource SubtitleTextStyle}"
                        FontSize="30"></TextBlock>
                </Grid>
            </Grid>
        </Viewbox>

        <controls:MultiRankDisplay
            Grid.Row="1"
            Grid.Column="0"
            x:Name="RankDisplay"/>
        <Viewbox    
            Visibility="Collapsed"
            Grid.Row="1"
            Grid.Column="0">
            <Grid
                MinWidth="300"
                Margin="{StaticResource SmallLeftTopRightBottomMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="{StaticResource TankDrawingImage}"/>
                <Image Grid.Row="0" Grid.Column="1" Source="{StaticResource DamageDrawingImage}"/>
                <Image Grid.Row="0" Grid.Column="2" Source="{StaticResource SupportDrawingImage}"/>

                <TextBlock Grid.Column="0" Grid.Row="1" 
                           Text="{Binding Profile.RankedCareer.Tank.CurrentRank.SkillRating}" 
                           Style="{StaticResource SubtitleTextStyle}"
                           TextAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="1" 
                           Text="{Binding Profile.RankedCareer.Damage.CurrentRank.SkillRating}" 
                           Style="{StaticResource SubtitleTextStyle}"
                           TextAlignment="Center"/>
                <TextBlock Grid.Column="2" Grid.Row="1" 
                           Text="{Binding Profile.RankedCareer.Tank.CurrentRank.SkillRating}" 
                           Style="{StaticResource SubtitleTextStyle}"
                           TextAlignment="Center"/>
            </Grid>
        </Viewbox>


        
        <lvc:CartesianChart
            x:Name="Chart"
            Grid.Row="2"
            Grid.Column="0"
            Series="{Binding Series}"
            XAxes="{Binding XAxes}"
            FindingStrategy="Automatic"/>

    </Grid>
</Page>
