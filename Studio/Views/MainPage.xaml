<Page
    x:Class="Studio.Views.MainPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:Studio.Properties"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    mc:Ignorable="d"

    d:DesignHeight="450" d:DesignWidth="800">
    <Page.Resources>
        <DataTemplate x:Key="FavouritesDataTemplate">
            <Grid 
                Height="70"
                ToolTipService.InitialShowDelay="50">
                <Grid.ToolTip>
                    <StackPanel>
                        <TextBlock
                            Text="{Binding Account.Name}"
                            Style="{StaticResource ListTitleStyle}"/>
                        <TextBlock
                            Text="{Binding Account.Id}"
                            Style="{StaticResource ListSubTitleStyle}"/>
                    </StackPanel>
                </Grid.ToolTip>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image
                    Source="{Binding AvatarUrl}"
                    Margin="{StaticResource XSmallLeftMargin}"/>

                <StackPanel Grid.Column="1"
                            Margin="{StaticResource MediumLeftMargin}">
                    <TextBlock
                        Text="{Binding Account.Name}"
                        Style="{StaticResource ListTitleStyle}"/>
                    <TextBlock
                        Text="{Binding Account.Id}"
                        Style="{StaticResource ListSubTitleStyle}"/>
                </StackPanel>


            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid
        Grid.Row="1"
        Margin="{StaticResource XSmallLeftRightMargin}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition x:Name="FavouritesColumn" Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>

        </Grid.Resources>

        <Button 
            Width="40" 
            HorizontalAlignment="Right"
            Click="OnAccountListButtonClick">ACC</Button>

        <Grid 
            Grid.Column="1"
            Grid.Row="0"
            Margin="{StaticResource XSmallTopMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ui:Button
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Appearance="Transparent"
                Click="OnFavouritesPanelButtonClick"
                Margin="{StaticResource XSmallLeftRightMargin}">
                <ui:SymbolIcon Symbol="ChevronDoubleRight16"/>
            </ui:Button>
            <ui:TextBox
                Grid.Column="1"
                TextChanged="OnFavouritesSearchTextChanged"/>
        </Grid>



        <Frame
            Grid.Row="1"
            x:Name="mainContentFrame"
            NavigationUIVisibility="Hidden"
            Focusable="False" />

        <ui:ListView 
            x:Name="FavouritesList"
            Grid.Column="1"
            Grid.Row="1"
            ItemTemplate="{StaticResource FavouritesDataTemplate}"
            ItemsSource="{Binding FilteredProfiles}"
            Margin="{StaticResource SmallTopMargin}"
            SelectionChanged="OnFavouritesSelectionChanged"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            VirtualizingPanel.ScrollUnit="Pixel">
            
        </ui:ListView>
    </Grid>
</Page>
