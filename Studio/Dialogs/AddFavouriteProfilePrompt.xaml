<ui:ContentDialog x:Class="Studio.Dialogs.AddFavouriteProfilePrompt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Studio.Dialogs"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:Studio.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Favourite Profile">
    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:AddFavouriteProfilePrompt}" />
    </ui:ContentDialog.Resources>
    <Grid MaxWidth="300">
        <StackPanel>
            <ui:TextBlock
                x:Name="InformationText"
                TextWrapping="Wrap"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Style="{StaticResource BodyTextStyle}"
                Margin="{StaticResource SmallLeftTopRightBottomMargin}"
                Text="Enter the BattleTag of the account you want to monitor (not your account to log in to, rather your friends' to look at) and hit connect."/>
            <ui:TextBox
                x:Name="BattletagInputBox"
                PlaceholderText="Enter Battletag..."
                TextChanged="OnBattleTagInputTextChanged"/>
            <ui:InfoBar
                x:Name="InformationBar"
                Margin="{StaticResource SmallTopMargin}"
                Severity="Error"
                Title="Invalid Battletag"
                Message="Battletag must be written as ExampleName#1234"
                IsOpen="False"/>

            <ui:Button
                x:Name="LaunchBnetButton"
                HorizontalAlignment="Stretch"
                Margin="{StaticResource SmallTopBottomMargin}"
                Height="35"
                Content="Connect"
                IsEnabled="{Binding IsBattleTagValid}"
                Click="OnLaunchBattlenetButtonClick"/>

            <ProgressBar
                x:Name="LaunchingBnetProgressBar"
                IsIndeterminate="True"
                Margin="{StaticResource SmallLeftRightMargin}"
                Visibility="Collapsed"/>
        </StackPanel>

    </Grid>
</ui:ContentDialog>
